{
  "name": "Mute Tab",
  "version": "1.0",
  "description": "Restores the 'Mute Tab' functionality of versions prior to Chrome 71.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "contextMenus"],
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "browser_action": {
    "default_title": "Mute Tab Extension"
  },
  "manifest_version": 2
}
